#Input Parameters for QM2 temperature tracking ML code

#timing
record(ao,  "SR:OPS-ML{$(MODE)}Time-SP"){
    field(DESC, "minutes between measurements") 
    field(EGU,  "minutes")
    field(VAL,  "5")
    field(LOPR, "1")
    field(HOPR, "120")
    info(autosaveFields, "VAL")
}

#test period
record(ao,  "SR:OPS-ML{$(MODE)}Coef-SP"){
    field(DESC, "test period coefficient")	
    field(VAL,  "1")
    info(autosaveFields, "VAL")
}

#data amount
record(ao,  "SR:OPS-ML{$(MODE)}DataAmnt-SP"){
    field(DESC, "# Data per period")
    field(VAL,  "48")
    info(autosaveFields, "VAL")
}

#measurement length
record(ao,  "SR:OPS-ML{$(MODE)}MeasLen-SP"){
    field(DESC, "length of data to MODEl, days")
    field(EGU,  "days")
    field(VAL,  "14")
    info(autosaveFields, "VAL")
}

#prediction length
record(ao,  "SR:OPS-ML{$(MODE)}PredictLen-SP"){
    field(DESC, "length of prediction, days")
    field(EGU,  "days")
    field(VAL,  "30")
    info(autosaveFields, "VAL")
}

#ML method
record(mbbo,  "SR:OPS-ML{$(MODE)}MLMethod-SP"){
    field(DESC, "test period coefficient")
    field(ZRST, "Error - Illegal Value")
    field(ONST, "Least Squares")
    field(TWST, "Quadratic")
    field(THST, "Lasso")
    field(VAL,  "1")
    info(autosaveFields, "VAL")
}

#Regularization parameter
record(ao,  "SR:OPS-ML{$(MODE)}LamdaReg-SP"){
    field(DESC, "test regularization coefficient")
    field(VAL,  "1")
    info(autosaveFields, "VAL")
}

#Threshold temp
record(ao,  "SR:OPS-ML{$(MODE)}ThreshTemp-SP"){
    field(DESC, "Threshold temperature")
    field(EGU,  "deg C")
    field(VAL,  "40")
    info(autosaveFields, "VAL")
}

#Warning temp
record(ao,  "SR:OPS-ML{$(MODE)}WarnTemp-SP"){
    field(DESC, "Warning temperature")
    field(EGU,  "deg C")
    field(VAL,  "60")
    info(autosaveFields, "VAL")
}

